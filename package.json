{
  "name": "api-ts-scaffold",
  "version": "0.1.0",
  "description": "Scaffold project for NS",
  "repository": {
    "type": "git",
    "url": "git://github.com/replsv/hapi18-typescript-scaffold.git"
  },
  "author": "Gabriel C <shellcooking@gmail.com>",
  "license": "MIT",
  "scripts": {
    "app:build-ts": "tsc",
    "app:copy-files": "copyfiles -u 1 src/**/*.json dist",
    "app:build": "ts-node-dev ./src/index.ts",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose -f docker-compose.yml down -v --remove-orphans",
    "dev:start": "npm run app:build",
    "start": "node dist/src/index.js",
    "build": "npm run app:build-ts && npm run app:copy-files"
  },
  "keywords": [
    "api"
  ],
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/joi": "^16.1.7",
    "@hapi/vision": "^5.5.2",
    "@sentry/node": "^5.9.0",
    "@types/code": "^4.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/hapi": "^18.0.2",
    "@types/hapi__hapi": "^18.2.5",
    "@types/hapi__joi": "^15.0.3",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.6.8",
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "hapi-swagger": "^11.0.2",
    "lodash": "^4.17.21",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "copyfiles": "^2.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
